program AverageMainDiagonal;
uses crt;

const
  N = 3;  { Розмір квадратного масиву }

var
  A: array[1..N, 1..N] of integer;  { Масив }
  i, sum: integer;
  avg: real;

begin
  clrscr;

  { Ініціалізація генератора випадкових чисел }
  randomize;  { Ініціалізація генератора випадкових чисел для забезпечення випадкових значень при кожному запуску }

  { Заповнення масиву випадковими числами в діапазоні від -100 до 100 }
  writeln('Масив, заповнений випадковими числами:');
  for i := 1 to N do
  begin
    for var j := 1 to N do
    begin
      A[i, j] := Random(201) - 100;  { Генерація числа в діапазоні від -100 до 100 }
      write(A[i, j]:4);  { Виведення кожного елемента масиву в табличному вигляді }
    end;
    writeln;  { Перехід на новий рядок після виведення всіх елементів поточного рядка }
  end;

  { Обчислення суми елементів на головній діагоналі }
  sum := 0;
  for i := 1 to N do
    sum := sum + A[i, i];  { Додаємо елементи головної діагоналі (A[1,1], A[2,2], A[3,3] тощо) }

  { Обчислення середнього арифметичного }
  avg := sum / N;  { Середнє арифметичне для елементів головної діагоналі }

  { Виведення результату }
  writeln('Середнє арифметичне елементів головної діагоналі масиву: ', avg:0:2);
  
  readln;  { Затримка на екран для виведення результату }
end.
